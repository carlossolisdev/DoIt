
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center pt-5">
            <div class="col-md-6 col-10 col-s border border-primary">
                <form action="/Users/Register" method="post" class="p-5">
                    <div class="form-group">
                        <label>Name</label>
                        <input id="nameField" name="name" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input id="emailField" name="email" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input id="phoneField" name="phone" type="tel" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input id="addressField" name="address" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input id="passwordField" name="password" type="password" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
